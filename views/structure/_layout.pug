doctype html
html(lang="en").h-100
  head
    block head
      title= title
      meta(name="description" content="")
      meta(name="author" content="Dick Swart")
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
      link(rel="icon" href="/images/favicon.ico")
      link(rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png")
      link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png")
      link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png")
      link(rel="manifest" href="/images/site.webmanifest")
      link(rel="mask-icon" href="/images/safari-pinned-tab.svg" color="#4ab52f")
      meta(name="msapplication-TileColor" content="#4ab52f")
      meta(name="theme-color" content="#4ab52f")


      block styles
        link(rel="stylesheet" href="/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/fontawesome.min.css")
        link(rel='stylesheet' href='/css/main.min.css')

  body.d-flex.flex-column.h-100
    include _header.pug

    main.flex-shrink-0(role="main")
      .container
        block content

    include _footer.pug

  block scripts
    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.min.js")
    script(src="/js/zepto.min.js")
    script(src="/js/zepto.touch.js")
    script(src="/js/fastclick.js")
    script(src="/js/main.js")
